@model List<Empleado>

@{ 
    List<string> listaoficios = ViewBag.Oficios as List<string>;
}

<h1>Empleados Oficios</h1>
<form method="post">
    <label>Seleccione un oficio: </label>
    <select name="oficio" class="form-control">
        @foreach (String oficio in listaoficios)
        {
            <option value="@oficio">@oficio</option>
        }
    </select>
    <button class="btn btn-success">
        Mostrar empleados
    </button>
</form>
<hr/>
@if (Model != null)
{
    <table class="table table-danger">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado empleado in Model)
            {
                <tr>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Oficio</td>
                    <td>@empleado.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}